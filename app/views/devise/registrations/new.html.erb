<div class="bg-img position-relative d-flex justify-content-center align-items-center">
  <!-- Header -->
  <header class="d-flex align-items-center p-3 position-absolute top-0 start-0 rounded shadow">
    <%= image_tag("logo.png", alt: "Logo", class: "logo me-2 mx-3") %>
    <%= image_tag("logo_name.png", alt: "Logo", class: "logo mx-3") %>
  </header>
  <div class="form-container bg-dark bg-opacity-50 rounded text-light shadow-lg col-md-4 d-flex justify-content-end" style="margin-top: 50px;width: 1137px; height: 646px; padding-top: 50px; padding-right: 70px">
    <div class="form-content">
      <h2>Create account</h2>
      <% if resource.errors.any? %>
        <div class="bg-red-500 text-white p-4 rounded mb-4">
          <ul>
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p>For buttons, band or celebrity</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Row 1: First Name and Last Name -->
        <div class="row mb-3">
          <div class="col-6 mb-2">
            <%= f.label :first_name, "First Name", class: "form-label" %>
            <%= f.text_field :first_name, class: "form-control", required: true %>
          </div>
          <div class="col-6">
            <%= f.label :last_name, "Last Name", class: "form-label" %>
            <%= f.text_field :last_name, class: "form-control", required: true %>
          </div>
        </div>

        <!-- Row 2: Email and Phone Number -->
        <div class="row mb-3">
          <div class="col-6 mb-2">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
          </div>
          <div class="col-6">
            <%= f.label :phone_number, "Phone Number", class: "form-label" %>
            <%= f.text_field :phone_number, class: "form-control", required: true %>
          </div>
        </div>

        <!-- Row 3: Password and Password Confirmation -->
        <div class="row mb-3">
          <div class="col-6 mb-2">
            <%= f.label :password, "Password", class: "form-label" %>
            <%# if @minimum_password_length %>
            <!--            <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
            <%# end %>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
          </div>
          <div class="col-6">
            <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mb-3 mt-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>
        <div class="mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :"I agree to all the Terms and Privacy policy", class: "form-check-label", required: true %>
        </div>

        <!-- Submit Button -->
        <div class="mb-2">
          <%= f.submit "Login", class: "btn btn-primary btn-lg", style: "width:206px;" %>
        </div>

        <%- if controller_name != 'sessions' %>
          Already have an account?
          <%= link_to "LogIn", new_session_path(resource_name) %><br/>
        <% end %>

      <% end %>

      <%#= render "devise/shared/links" %>
    </div>
  </div>
</div>
