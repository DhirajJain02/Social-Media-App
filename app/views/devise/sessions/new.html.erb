<div class="bg-img position-relative d-flex justify-content-center align-items-center">
  <!-- Header -->
  <header class="d-flex align-items-center p-3 position-absolute top-0 start-0 rounded shadow">
    <%= image_tag("logo.png", alt: "Logo", class: "logo me-2 mx-3") %>
    <%= image_tag("logo_name.png", alt: "Logo", class: "logo mx-3") %>
  </header>
  <div class="form-container bg-dark bg-opacity-50 rounded text-light shadow-lg col-md-4" style="margin-top: 50px;width: 458px; height: 646px; padding: 50px">

    <h2 class="mb-4">Login</h2>
    <% if flash[:notice] || flash[:alert] %>
      <div class="fixed-top mb-4 mt-2 d-flex justify-content-center me-5">
        <div class="alert d-flex justify-between align-items-center alert-secondary text-white bg-danger bg-opacity alert-dismissible shadow-lg" style="width: 80%" role="alert">
          <%= flash[:notice] || flash[:alert] %>
          <button type="button" class="btn-close bg-white align-items-center" style="border-radius: 20px; padding: 5px; width: 20px; height: 20px; margin: 15px; " data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "form-label" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>


      <div>
        <%= f.submit "Login", class: "btn btn-primary mt-5", style: "width: 206px; font-size: 14px; height:48px" %>
      </div>
    <% end %>
    <div class="mt-3">
      <%#= render "devise/shared/links" %>
      Don't have an account?
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "p-1" %><br/>
      <% end %>
    </div>
  </div>
</div>