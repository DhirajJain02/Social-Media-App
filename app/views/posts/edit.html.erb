<div class="container mx-auto p-6">
  <h1 class="text-xl font-bold mb-4">Edit Post</h1>

  <%= form_with model: @post, local: true do |f| %>
    <div class="mb-4">
      <%= f.label :title, class: "block text-gray-700" %>
      <%= f.text_field :title, class: "w-full p-2 border border-gray-300 rounded-lg" %>
    </div>

    <div class="mb-4">
      <%= f.label :description, class: "block text-gray-700" %>
      <%= f.text_area :description, class: "w-full p-2 border border-gray-300 rounded-lg" %>
    </div>

    <%= f.submit "Update Post", class: "bg-blue-500 text-white px-4 py-2 rounded-lg" %>
  <% end %>

  <%= link_to 'Back', posts_path, class: "bg-gray-500 text-white px-4 py-2 rounded-lg mt-4" %>
</div>
